.user-container
  .user-container-header
    %h1.user-container-header__left
      =link_to root_path, class: "signup-home-link" do
        = image_tag("//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?404657508",size: "189x49",class: "image")
    %nav.user-signup-bar
      %ol.user-signup-bar-progress4
        %li.user-signup-bar-progress4__type
          会員情報
          .user-signup-bar-progress4__rod-red-first
        %li.user-signup-bar-progress4__type
          電場番号認証
          .user-signup-bar-progress4__rod-red
        %li.user-signup-bar-progress4__type
          お届け先住所入力
          .user-signup-bar-progress4__rod-red
        %li.user-signup-bar-progress4__type-red
          支払い方法
          .user-signup-bar-progress4__rod-red-middle
        %li.user-signup-bar-progress4__type
          完了
          .user-signup-bar-progress4__rod-last

  .signup-view-1page
    %section.signup-view-block
      %h2.signup-view-block__explanation 
        支払い方法
      = render partial: 'error-messages', locals: {user: @user, column: "nickname"}
      = form_for @user, url: { controller: :signup, action: :create }, method: :post, html: {class: 'signup-view-block__form'} do |f|
        .signup-view-block__form--top
          .signup-form1
            %label.signup-form1__label
              カード番号
            %span.signup-form1__span
              必須
            = f.text_field :last_name, placeholder: '例) 半角数字のみ', class: 'signup-form1__form'
          .signup-form4
            .signup-form4-block
              %label.signup-form1__label
                有効期限
              %span.signup-form1__span
                必須
            -# 下記2行は仮です（2019/11/20 堀)
            .signup-form4__form
              != sprintf(f.date_select(:last_name, order:[:month,:year,:day], use_month_numbers:true, discard_day:true, start_year:Time.now.year-2000, end_year:Time.now.year-2000+10, date_separator:'%s'),'月') + '年'
          .signup-form1
            = image_tag("/credit_card_logo.jpg",size: "189x49",class: "credit-image")
          .signup-form1
            %label.signup-form1__label
              セキュリティコード
            %span.signup-form1__span
              必須
            = f.text_field :last_name, placeholder: '例) カード背面4桁もしくは3桁の番号', class: 'signup-form1__form'
          .signup-credit-form-label
            %span.credit-form-question ?
            = link_to( "カード裏面の番号とは？", "/", class: "credit-form-text")
          .signup-next-submit
            = f.submit '次へ進む'

  = render "layouts/exhibit-footer"