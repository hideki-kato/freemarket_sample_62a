.user-container
  .user-container-header
    %h1.user-container-header__left
      =link_to root_path, class: "signup-home-link" do
        = image_tag("//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?404657508",size: "189x49",class: "image")
    %nav.user-signup-bar
      %ol.user-signup-bar-progress4
        %li.user-signup-bar-progress4__type
          会員情報
          .user-signup-bar-progress4__rod-red-first
        %li.user-signup-bar-progress4__type
          電場番号認証
          .user-signup-bar-progress4__rod-red
        %li.user-signup-bar-progress4__type
          お届け先住所入力
          .user-signup-bar-progress4__rod-red
        %li.user-signup-bar-progress4__type-red
          支払い方法
          .user-signup-bar-progress4__rod-red-middle
        %li.user-signup-bar-progress4__type
          完了
          .user-signup-bar-progress4__rod-last

  .signup-view-1page
    %section.signup-view-block
      %h2.signup-view-block__explanation 
        支払い方法
      = render partial: 'error-messages', locals: {user: @user, column: "nickname"}
      = form_for @user, url: { controller: :signup, action: :create }, method: :post, html: {class: 'signup-view-block__form'} do |f|
        .signup-next-submit
          = f.submit '次へ進む'

  = render "layouts/exhibit-footer"