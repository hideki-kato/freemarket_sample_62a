.signup-view-1page
  %section.signup-view-block
    %h2.signup-view-block__explanation 
      発送元・お届け先住所変更

    = form_for @myaddress, url: user_path, html: {class: 'signup-view-block__form'} do |f|
      .signup-view-block__form--top
        .signup-form1
          %label.signup-form1__label
            お名前(全角)
          %span.signup-form1__span
            必須
          = f.text_field :last_name, value: "#{@myaddress.last_name}", placeholder: '例) 山田', class: 'signup-form1__form validate[required]'
          = f.text_field :first_name, value: "#{@myaddress.first_name}", placeholder: '例) 彩', class: 'signup-form1__form validate[required]'
        .signup-form1
          %label.signup-form1__label
            お名前カナ(全角)
          %span.signup-form1__span
            必須
          = f.text_field :last_name_kana, value: "#{@myaddress.last_name_kana}", placeholder: '例) ヤマダ', class: 'signup-form1__form validate[required]'
          = f.text_field :first_name_kana, value: "#{@myaddress.first_name_kana}", placeholder: '例) アヤ', class: 'signup-form1__form validate[required]'
        .signup-form1
          %label.signup-form1__label
            郵便番号
          %span.signup-form1__span
            必須
          = f.text_field :zip, value: "#{@myaddress.zip}", placeholder: '例） 123-4567', class: 'signup-form1__form validate[required]'
        .signup-form1
          %label.signup-form1__label
            都道府県
          %span.signup-form1__span
            必須
          .prefecture-select-wrap
            = f.collection_select :prefecture, Prefecture.all, :id, :name, class: 'validate[required]'
            = fa_icon 'chevron-down', class:'prefecture.fas.fa-chevron-down'
        .signup-form1
          %label.signup-form1__label
            市区町村
          %span.signup-form1__span
            必須
          = f.text_field :city_name, value: "#{@myaddress.city_name}", placeholder: '例）横浜市緑区', class: 'signup-form1__form validate[required]'
        .signup-form1
          %label.signup-form1__label
            番地
          %span.signup-form1__span
            必須
          = f.text_field :block_name, value: "#{@myaddress.block_name}", placeholder: '例）青山1-1-1', class: 'signup-form1__form validate[required]'
        .signup-form1
          %label.signup-form1__label
            建物名
          %span.signup-form1__span-any
            任意
          = f.text_field :bill_name, value: "#{@myaddress.bill_name}", placeholder: '例）柳ビル103', class: 'signup-form1__form'
        .signup-form1
          %label.signup-form1__label
            電話
          %span.signup-form1__span-any
            任意
          = f.text_field :tel, value: "#{@myaddress.tel}", placeholder: '例）09012345678', class: 'signup-form1__form validate[custom[number]'
          
        .signup-next-submit
          = f.submit '変更する'


= javascript_include_tag 'signup.js'